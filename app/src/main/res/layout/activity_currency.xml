<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CurrencyActivity">


    <ImageView
        android:id="@+id/coin_symbol"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toRightOf="@id/coin_name"
        android:contentDescription="@string/coin_symbol"
        android:src="@drawable/bitcoin_symbol"
        />

    <TextView
        android:id="@+id/coin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bitcoin"
        android:textAllCaps="true"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/coin_symbol"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

</android.support.constraint.ConstraintLayout>